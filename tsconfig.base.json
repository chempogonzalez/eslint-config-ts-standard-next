{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "ES2015",
      "ES2017",
      "ES2018.Intl",
      "ESNext.Intl",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.tsx",

    "./demos/**/*.ts",
    "./demos/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./fixtures/**/*.*"
  ]
}
